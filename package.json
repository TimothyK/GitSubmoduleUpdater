{
  "name": "git-submodule-updater",
  "displayName": "Git Submodule Updater",
  "description": "Azure DevOps pipeline task to check git submodules for updates",
  "version": "1.0.0",
  "publisher": "TimothyK",
  "keywords": [
    "azure-devops",
    "pipeline",
    "task",
    "git",
    "submodule",
    "ci-cd"
  ],
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "prepackage": "npm run clean && npm run build",
    "package": "tfx extension create --manifest-globs vss-extension.json",
    "publish": "tfx extension publish --manifest-globs vss-extension.json"
  },
  "devDependencies": {
    "@types/json-schema": "^7.0.15",
    "@types/node": "^24.10.1",
    "rimraf": "^6.1.2",
    "tfx-cli": "^0.22.2",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "azure-pipelines-task-lib": "^5.2.2",
    "simple-git": "^3.20.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TimothyK/GitSubmoduleUpdater.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  }
}
